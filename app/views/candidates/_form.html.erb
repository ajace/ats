<% flash.each do |name, msg| %>
  <div class="alert alert-<%= name == :notice ? "success" : "error" %>">
    <a class="close" data-dismiss="alert">x</a>
    <%= msg %>
  </div>
<% end %>




<%= simple_nested_form_for @candidate, html: {multipart: true, class: 'form-horizontal'} do |f| %>
  

  <%= f.fields_for :resume do |resume_form| %>

    <%= link_to "resume", resume_form.object.file.url if resume_form.object.file? %>

    <%= resume_form.file_field :file, label: "Resume" %>
    <%= resume_form.link_to_remove "Remove this file" %>
  <% end %>

  <%= f.link_to_add "Add resume", :resume, class: 'controls' %>

  <p>

  <%= f.input :name %>
  <%= f.input :email, :required => false %>
  <%= f.input :phone %>
  <%= f.input :position %>

  <%= f.button :submit, 'Submit', class: 'controls' %>

<% end %>


