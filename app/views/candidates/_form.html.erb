<% if flash %>
	<% flash.each do |name, msg| %>
    <div class="alert alert-<%= name == :notice ? "success" : "error" %>">
      <a class="close" data-dismiss="alert">x</a>
      <%= msg %>
    </div>
  <% end %>
<% end %>
<% if @candidate.resume? %> 
    <% @resumefilename = File.basename(@candidate.resume.path) %>
  <% else %>
    <% @resumefilename = "Please upload resume" %>
<% end %>

<%= simple_form_for @candidate, :html => { :class => 'form-horizontal'} do |f| %>
  <%= f.error_notification %>

  <%= f.hint 'Upload a resume (Doc, Docx, PDF, Txt formats supported)', class: "control-group controls" %>
  <%= f.file_field :resume, class: "controls", label: "Resume"  %><BR>
  
  <%= link_to @resumefilename, @candidate.resume.url, class: "controls" %>

  <%= f.check_box :remove_resume, class: "controls" %> Remove resume <br><br>
  
  <%= f.input :name %>
  <%= f.input :email, :required => false %>
  <%= f.input :phone %>
  <%= f.input :position %>

  <%= f.button :submit, 'Submit', class: "control-group controls" %>

<% end %>




