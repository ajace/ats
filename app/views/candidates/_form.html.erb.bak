<% flash.each do |name, msg| %>
  <div class="alert alert-<%= name == :notice ? "success" : "error" %>">
    <a class="close" data-dismiss="alert">x</a>
    <%= msg %>
  </div>
<% end %>

<%= simple_form_for @candidate, html: { class: 'form-horizontal'} do |f| %>

  <%= f.simple_fields_for :resume do |resume_form| %>
    <%= resume_form.hint 'Upload a resume (Doc, Docx, PDF, Txt formats supported)' %>
    <%= resume_form.file_field :file, label: "Resume"  %>
    <%= resume_form.full_error :resume, class: "alert" %>
    <%= resume_form.check_box :remove_file %> Remove resume
  <% end %>

  <%= f.input :name %>
  <%= f.input :email, :required => false %>
  <%= f.input :phone %>
  <%= f.input :position %>

  <%= f.button :submit, 'Submit' %>

<% end %>



<%= link_to "Resume", resume_form.object.file.url %>

<%= resume_form.file.filename if resume_form.file.filename? %>

<%= link_to @resumefilename, @candidate.resume.url, class: "controls" %>



