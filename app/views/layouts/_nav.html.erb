<div class="navbar navbar-static-top">
  <div class="container">  
    <a class="brand" href="/">Company</a>

    <% if current_user %>
      <ul class="nav">
        <li class="<%= 'active' if params[:controller] == 'candidates' %>"><a href="/candidates">Candidates</a></li>
        <li class="<%= 'active' if params[:controller] == 'jobs' %>"><a href="/jobs">Jobs</a></li>
      </ul>
    <% end %>

    <div class="navbar-text pull-right">
      <% if current_user %>
        Logged in as <%= current_user.name %>  
      <% end %>
      
        <% if current_user %>
          <%= link_to "...Log Out", logout_path, method: "delete" %>
          <% else %>
          <%= link_to "Admin Log In", login_path %>
        <% end %>
    </div>
  </div>
</div>