<header><h2>Log In</h2></header>

<%= form_tag sessions_path, class: "form-horizontal" do %>
	<div class="control-group">
		<div class="control-label"> <%= label_tag :email %></div>
		<div class="controls"><%= text_field_tag :email, params[:email] %></div>
	</div>		
	<div class="control-group">
		<div class="control-label"> <%= label_tag :password %></div>
		<div class="controls"><%= password_field_tag :password %></div>
	</div>		
	<div class="control-group">
		<div class="controls"><%= submit_tag "Log in" %></div>
	</div>
<% end %>



    